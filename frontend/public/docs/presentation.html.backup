    <!-- JavaScript -->
    <script>
        // Variables globales
        let currentSlide = 0;
        let slides, totalSlides, prevBtn, nextBtn, slideCounter, dotsContainer;
        
        // Attendre que le DOM soit charg√©
        document.addEventListener('DOMContentLoaded', function() {
            // Initialisation Mermaid APR√àS le DOM
            mermaid.initialize({ 
                startOnLoad: false,
                theme: 'dark',
                themeVariables: {
                    primaryColor: '#3b82f6',
                    primaryTextColor: '#fff',
                    primaryBorderColor: '#1e40af',
                    lineColor: '#64748b',
                    secondaryColor: '#1e293b',
                    tertiaryColor: '#0f172a'
                }
            });
            
            slides = document.querySelectorAll('.slide');
            totalSlides = slides.length;
            prevBtn = document.getElementById('prevBtn');
            nextBtn = document.getElementById('nextBtn');
            slideCounter = document.getElementById('slideCounter');
            dotsContainer = document.getElementById('dotsContainer');
            
            console.log('Total slides:', totalSlides); // Debug
            
            // Event listeners
            prevBtn.addEventListener('click', prevSlide);
            nextBtn.addEventListener('click', nextSlide);
            
            // Navigation clavier
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') prevSlide();
                if (e.key === 'ArrowRight') nextSlide();
            });
            
            // Initialisation
            generateDots();
            showSlide(0);
        }); // Fin DOMContentLoaded
        
        // G√©n√©ration des dots
        function generateDots() {
            dotsContainer.innerHTML = '';
            for (let i = 0; i < totalSlides; i++) {
                const dot = document.createElement('button');
                dot.className = 'w-2 h-2 rounded-full transition-all';
                dot.classList.add(i === currentSlide ? 'bg-blue-500 w-8' : 'bg-slate-700 hover:bg-slate-600');
                dot.addEventListener('click', () => goToSlide(i));
                dotsContainer.appendChild(dot);
            }
        }
        
        // Navigation
        function showSlide(n) {
            console.log('showSlide appel√© avec n =', n);
            console.log('Nombre total de slides:', slides.length);
            
            slides.forEach((slide, index) => {
                slide.classList.remove('active');
                console.log(`Slide ${index} - active removed`);
            });
            
            slides[n].classList.add('active');
            console.log(`Slide ${n} - active added`);
            
            // Mise √† jour compteur
            slideCounter.textContent = `${n + 1} / ${totalSlides}`;
            
            // Mise √† jour boutons
            prevBtn.disabled = n === 0;
            nextBtn.disabled = n === totalSlides - 1;
            
            // Mise √† jour dots
            generateDots();
            
            // Render Mermaid si pr√©sent - FORCER le rendu
            setTimeout(() => {
                const mermaidElements = slides[n].querySelectorAll('.mermaid');
                if (mermaidElements.length > 0) {
                    console.log('Mermaid elements trouv√©s:', mermaidElements.length);
                    mermaidElements.forEach((element, index) => {
                        // Ajouter un ID unique si pas pr√©sent
                        if (!element.id) {
                            element.id = `mermaid-${n}-${index}`;
                        }
                        console.log('Rendering mermaid:', element.id);
                    });
                    mermaid.run({
                        querySelector: '.slide.active .mermaid'
                    });
                }
            }, 100);
            
            // Render Chart.js si slide 8 (Impact & ROI)
            if (n === 7) {
                setTimeout(() => renderGainsChart(), 150);
            }
        }
        
        // Chart.js - Gains Temps
        function renderGainsChart() {
            console.log('renderGainsChart appel√©');
            const ctx = document.getElementById('gainsChart');
            console.log('Canvas trouv√©:', ctx);
            if (!ctx) {
                console.error('Canvas gainsChart non trouv√© !');
                return;
            }
            
            // D√©truire le chart existant si pr√©sent
            if (window.gainsChartInstance) {
                window.gainsChartInstance.destroy();
            }
            
            console.log('Cr√©ation du chart...');
            
            window.gainsChartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Assistant Id√©ateur', 'Dashboard KPIs', 'R√©daction Propales'],
                    datasets: [{
                        label: 'Heures gagn√©es/mois',
                        data: [17.5, 2.5, 12.5],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(245, 158, 11, 0.8)'
                        ],
                        borderColor: [
                            'rgb(59, 130, 246)',
                            'rgb(16, 185, 129)',
                            'rgb(245, 158, 11)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(15, 23, 42, 0.9)',
                            titleColor: '#fff',
                            bodyColor: '#cbd5e1',
                            borderColor: '#475569',
                            borderWidth: 1,
                            padding: 12,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y + 'h/mois';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(71, 85, 105, 0.3)'
                            },
                            ticks: {
                                color: '#cbd5e1',
                                callback: function(value) {
                                    return value + 'h';
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#cbd5e1',
                                font: {
                                    size: 11
                                }
                            }
                        }
                    }
                }
            });
        }
        
        function nextSlide() {
            if (currentSlide < totalSlides - 1) {
                currentSlide++;
                showSlide(currentSlide);
            }
        }
        
        function prevSlide() {
            if (currentSlide > 0) {
                currentSlide--;
                showSlide(currentSlide);
            }
        }
        
        function goToSlide(n) {
            currentSlide = n;
            showSlide(currentSlide);
        }
    </script>
    
